{
	"extends": [
		"tslint:recommended",
		"tslint-config-prettier"
	],
	"rules": {
		"no-any": false,
		"arrow-parens": [
			true,
			"ban-single-arg-parens"
		],
		"interface-name": [
			true,
			"never-prefix"
		],
		"max-line-length": [
			true,
			{
				"limit": 160,
				"ignore-pattern": "^import |^export {(.*?)}"
			}
		],
		"member-ordering": [
			true,
			{
				"order": [
					"static-field",
					"instance-field",
					"static-method",
					"instance-method"
				]
			}
		],
		"no-angle-bracket-type-assertion": false,
		"object-literal-shorthand": [
			true,
			"never"
		],
		"object-literal-sort-keys": false,
		"ordered-imports": false,
		"quotemark": [
			true,
			"single"
		],
		"variable-name": false,
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-separator",
			"check-type"
		],
		"indent": true,
		"align": true,
		"space-before-function-paren": false,
		"typedef-whitespace": true,
		"no-console": true,
		"no-duplicate-variable": true,
		"no-shadowed-variable": true,
		"no-var-keyword": true,
		"trailing-comma": true,
		"semicolon": false,
		"prefer-for-of": false
	}
}
