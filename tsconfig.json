{
	"compilerOptions": {
		"outDir": "./dist",
		"declaration": true,
		"baseUrl": "./src",
		"target": "ES5",
		"lib": [
			"DOM",
			"ES2017",
			"ES7",
			"ES6"
		],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"moduleResolution": "Node",
		"skipLibCheck": true
	},
	"include": ["./src"],
	"exclude": [
		"./node_modules",
		"**/__tests__/*",
		"./dist"
	]
}
